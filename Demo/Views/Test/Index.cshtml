@using Demo.BL.Interface
@inject IEmployeeRepo employee
@inject IDepartmentRepo department

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table border="1">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Salary</th>
    </tr>
    @foreach(var item in employee.Get())
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Salary</td>
        </tr>
    }
</table>


<table border="1">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Code</th>
    </tr>
    @foreach (var item in department.Get())
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Code</td>
        </tr>
    }
</table>

<select>
    <option>Choose Department</option>
    @foreach (var item in department.Get())
    {
        <option value="@item.Id">
            <td>@item.Name</td>
        </option>
    }
</select>
